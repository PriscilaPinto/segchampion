pipeline {
    agent any

    environment {
        GIT_URL = 'https://github.com/hardik05/Damn_Vulnerable_C_Program.git'
    }

    stages {
        stage('Limpar Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout do GitHub') {
            steps {
                git branch: 'master', url: env.GIT_URL
            }
        }

        stage('SAST com Horusec_Flawfinder') {
            steps {
                sh '''
                docker run --rm \
                    -v /home/pri/relatorio:/report \
                    -v /var/run/docker.sock:/var/run/docker.sock \
                    -v ${WORKSPACE}:/src/horusec \
                    -v /home/pri/horusec-config.json:/config/horusec-config.json \
                    horuszup/horusec-cli:v2.9.0-beta.3 \
                    horusec start \
                    -p /src/horusec \
                    -P ${WORKSPACE} \
                    -o json \
                    -O /report/output.json \
                    --config-file-path=/config/horusec-config.json
                '''
                sh '/home/pri/script/aplicacao_c_horusec_script.sh'
            
    
            }
        }
    }
}

